FROM node:18

WORKDIR /app

COPY package*.json ./
RUN npm install

COPY . .

ARG REACT_APP_API_NOTIFICACIONES
ARG REACT_APP_API_ADMINISTRADORES_TURNOS
ARG REACT_APP_API_ADMINISTRADORES
ARG REACT_APP_API_VALIDAR_ENCUESTA
ARG REACT_APP_API_PREGUNTAS_ENCUESTA
ARG REACT_APP_API_RESPONDER_ENCUESTA

ENV REACT_APP_API_NOTIFICACIONES=$REACT_APP_API_NOTIFICACIONES
ENV REACT_APP_API_ADMINISTRADORES_TURNOS=$REACT_APP_API_ADMINISTRADORES_TURNOS
ENV REACT_APP_API_ADMINISTRADORES=$REACT_APP_API_ADMINISTRADORES
ENV REACT_APP_API_VALIDAR_ENCUESTA=$REACT_APP_API_VALIDAR_ENCUESTA
ENV REACT_APP_API_PREGUNTAS_ENCUESTA=$REACT_APP_API_PREGUNTAS_ENCUESTA
ENV REACT_APP_API_RESPONDER_ENCUESTA=$REACT_APP_API_RESPONDER_ENCUESTA


RUN chmod +x node_modules/.bin/react-scripts

RUN npm run build

RUN npm install -g serve
CMD ["serve", "-s", "build"]

EXPOSE 3002